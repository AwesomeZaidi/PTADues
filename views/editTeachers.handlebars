{{#if errorMessage}}
<div class="alert alert-danger" role="alert">
  {{errorMessage}}
</div>
{{/if}}
{{#if successMessage}}
<div class="alert alert-success" role="alert">
    Successfully added {{successMessage}}.
</div>
{{/if}}

<div class="center">
    <div class="top">
        <button class="circle">Add</button>
        <button class="circle">Remove</button>
        <button class="circle">Edit</button>
    </div>
    <div class="bottom">
        <label>Type: <select id="teacherType">
            <option value="Miscelaneous">Miscelaneous</option>
            <option value="PreK">Nursary School</option>
            <option value="Elementary">Elementary School</option>
            <option value="Middle">Middle School</option>
            <option value="Assistants">Assistant</option>
        </select></label>

        <form class="form" action="/faculty/create" method="POST">
            <h3 id="form-title">Add Miscelaneous Member</h3>
            <table id="query-table">
                
            </table>
            <input type="hidden" name="Type" id="type-input" value="Miscelaneous">
            <div class="buttonContainer">
                <button type="submit">Add</button>
            </div>
        </form>
    </div>
</div>
<div class="right"></div>

<script src="../js/editTeachers.js"></script>
