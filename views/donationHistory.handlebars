<div class="accordion container-fluid" id="orderAccordian">
  {{#each orders}}
    <div class="card">
      <div class="card-header" id="heading-{{this.orderId}}">
        <h5 class="mb-0">
          <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapse-{{this.orderId}}" aria-expanded="false" aria-controls="collapse-{{this.orderId}}">
            Order# {{this.orderId}}
          </button>
        </h5>
      </div>
      <div id="collapse-{{this.orderId}}" class="collapse" aria-labelledby="heading-{{this.orderId}}" data-parent="#orderAccordian">
        <div class="card-body">
          <div class="row">
            <div class="col-md">
              <h5>Order Details:</h5>
              <div class="row">
                <div class="col-sm-4">Name:</div>
                <div class="col-sm">{{this.name}}</div>
              </div>
              <div class="row">
                <div class="col-sm-4">Email:</div>
                <div class="col-sm">{{this.email}}</div>
              </div>
              <div class="row">
                <div class="col-sm-4">Phone:</div>
                <div class="col-sm">{{this.phone}}</div>
              </div>
              <div class="row">
                <div class="col-sm-4">Address:</div>
                <div class="col-sm">{{this.address}}</div>
              </div>
              <div class="row">
                <div class="col-sm">Amount:</div>
                <div class="col-sm">${{this.amount}}.00</div>
              </div>
            </div>
            <div class="col-md">
              <h5>Children:</h5>
              {{#each this.children}}
              <div class="row">
                <div class="col-sm-2">Name:</div>
                <div class="col-sm">{{this.name}}</div>
                <div class="col-sm-2">Grade:</div>
                <div class="col-md">{{this.grade}}</div>
              </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
<div class="row">
  <div class="col-md">
    <div class="row">
      <div class="col-sm-4">Name:</div>
      <div class="col-sm"></div>
    </div>
  </div>
  <div class="col-md">

  </div>
</div>